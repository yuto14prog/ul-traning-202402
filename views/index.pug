extends layout

block content
  h1= title

  - if(flashMessage)
    div.flash=flashMessage

  div 
    a(href="/contact_form") 連絡先の追加
  
  div  
    table 
      tr 
        th 名前
        th Email 
        th 編集
        th 削除
      each contact in contacts  
       tr 
        td=contact.name 
        td=contact.email
        td 
          a(href=`/contacts/${contact.id}/edit`) 編集
        td
          form(action=`/contacts/${contact.id}/delete`, method="post")
            input(type="submit", value="削除")

  footer 
    a(href="/about") このサービスについて
    p アクセス時刻 #{now}
    p トップページのアクセス回数 #{view_counter}
